<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/background_dark">

    <TextView android:text="@string/portfolio_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/abc_text_size_title_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotifyStreamer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="openApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/footballScores"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/spotifyStreamer"
        android:layout_alignLeft="@+id/spotifyStreamer"
        android:layout_alignStart="@+id/spotifyStreamer"
        android:layout_alignRight="@+id/spotifyStreamer"
        android:layout_alignEnd="@+id/spotifyStreamer"
        android:onClick="openApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/footballLibrary"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_orange_dark"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/footballScores"
        android:layout_alignStart="@+id/footballScores"
        android:layout_alignRight="@+id/footballScores"
        android:layout_alignEnd="@+id/footballScores"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/footballScores"
        android:onClick="openApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:id="@+id/buildItBigger"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentBottom="false"
        android:layout_alignLeft="@+id/footballLibrary"
        android:layout_alignStart="@+id/footballLibrary"
        android:layout_below="@+id/footballLibrary"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/footballLibrary"
        android:layout_alignEnd="@+id/footballLibrary"
        android:onClick="openApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyzReader"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buildItBigger"
        android:layout_alignLeft="@+id/buildItBigger"
        android:layout_alignStart="@+id/buildItBigger"
        android:layout_alignRight="@+id/buildItBigger"
        android:layout_alignEnd="@+id/buildItBigger"
        android:onClick="openApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: my own app"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xyzReader"
        android:layout_alignLeft="@+id/xyzReader"
        android:layout_alignStart="@+id/xyzReader"
        android:layout_alignRight="@+id/xyzReader"
        android:layout_alignEnd="@+id/xyzReader"
        android:onClick="openApp" />

</RelativeLayout>
